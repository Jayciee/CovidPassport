@page
@model CovidPassport.Pages.Addresses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Address</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @("House Number")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.HouseNumber)
        </dd>
        <dt class="col-sm-2">
            @("Street Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.StreetName)
        </dd>
        <dt class="col-sm-2">
            @("City")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-2">
            @("Postcode")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Postcode)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Address.AddressId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
