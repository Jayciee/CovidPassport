@page
@model CovidPassport.Pages.Passports.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Passport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Passport.PassportId" />
            <div class="form-group">
                <label asp-for="Passport.PersonId" class="control-label"></label>
                <select asp-for="Passport.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Passport.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passport.HealthCentreId" class="control-label"></label>
                <select asp-for="Passport.HealthCentreId" class="form-control" asp-items="ViewBag.HealthCentreId"></select>
                <span asp-validation-for="Passport.HealthCentreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passport.Picture" class="control-label"></label>
                <input asp-for="Passport.Picture" class="form-control" />
                <span asp-validation-for="Passport.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passport.ExpirationDate" class="control-label"></label>
                <input asp-for="Passport.ExpirationDate" class="form-control" />
                <span asp-validation-for="Passport.ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
