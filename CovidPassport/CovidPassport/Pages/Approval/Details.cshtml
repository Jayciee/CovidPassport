@page
@model CovidPassport.Pages.Approval.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>NHS Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @("NHS Number")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.PersonId)
        </dd>
        <dt class="col-sm-2">
            @("First Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Dob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Dob)
        </dd>
        <dt class="col-sm-2">
            @("No. of Vaccines")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.NoOfVaccines)
        </dd>
        <dt class="col-sm-2">
            @("House Number")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Address.HouseNumber)
        </dd>
        <dt class="col-sm-2">
            @("Street Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Address.StreetName)
        </dd>
        <dt class="col-sm-12">
            @("City")
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Person.Address.City)
        </dd>
        <dt class="col-sm-12">
            @("Postcode")
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Person.Address.Postcode)
        </dd>
    </dl>
</div>
