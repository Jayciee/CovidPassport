@page
@model CovidPassport.Pages.Persons.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>NHS Records</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Surname)
        </dd>
        <dt class="col-sm-2">
            @("Forename")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @("No. of Vaccines")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.NoOfVaccines)
        </dd>
        <dt class="col-sm-2">
            @("Date of Birth")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Dob)
        </dd>
        <dt class="col-sm-2">
            @("City")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Address.City)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Person.PersonId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
