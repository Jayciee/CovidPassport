@page
@model CovidPassport.Pages.Persons.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Surname)
        </dd>
        <dt class="col-sm-2">
            @("First Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @("No. of Vaccines")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.NoOfVaccines)
        </dd>
        <dt class="col-sm-2">
            @("Date of Birth")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Dob)
        </dd>
        <dt class="col-sm-2">
            @("Address")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Address.City)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Person.PersonId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
